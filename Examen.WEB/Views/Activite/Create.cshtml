@using Examen.ApplicationCore.Domain
@model Examen.ApplicationCore.Domain.Activite

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Activite</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prix" class="control-label"></label>
                <input asp-for="Prix" class="form-control" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeService" class="control-label"></label>
                <input asp-for="TypeService" class="form-control" />
                <span asp-validation-for="TypeService" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Zone.Ville" class="control-label"></label>
                <input asp-for="Zone.Ville" class="form-control" />
                <span asp-validation-for="Zone.Ville" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Zone.Pays" class="control-label"></label>
                <input asp-for="Zone.Pays" class="form-control" />
                <span asp-validation-for="Zone.Pays" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="ActivitiType" class="control-label"></label>
                <select asp-for="ActivitiType" class="form-control"
                        asp-items="Html.GetEnumSelectList<ActivitiType>()"></select>
                <span asp-validation-for="ActivitiType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
