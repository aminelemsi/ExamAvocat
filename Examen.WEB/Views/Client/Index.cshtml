@model IEnumerable<Examen.ApplicationCore.Domain.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-action="index">
    <fieldset>
        Rechercher :
        <input type="text" name="Login" />
        <input type="submit" value="Serach" />
    </fieldset>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConseillerFk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.conseiller.ConseillerId)
                </td>
                <td>
                    <img src="~/uploads/@item.Photo" width="40" height="40" />
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Identifiant">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Identifiant">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Identifiant">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
