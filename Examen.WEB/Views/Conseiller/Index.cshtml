@model IEnumerable<Examen.ApplicationCore.Domain.Conseiller>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConseillerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ConseillerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ConseillerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
